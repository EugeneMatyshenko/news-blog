<h2> Edit article</h2>
<div class="section">
  <%= simple_form_for(@article, url: edit_article_path) do |f| %>
    <div class="field">
      <div class="control">
        <%= f.input :user_id %>
        <%= f.input :user_email %>
        <%= f.input :title %>
        <%= f.input :body %>
        <%= f.button :submit, 'Update article'%>
      </div>
    </div>
  <% end %>
</div>
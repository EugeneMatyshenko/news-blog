<section class="section">

  <div class="container">
    <div><b>Title: </b> <%= @article.title %></div>
    <div><b>Body: </b>  <%= @article.body %> </div>
    <div><b>User email: </b>  <%= @user_email %> </div>
    <% @tags.each do |tags| %>
      <div class="card">
        <p class="title"><b>Tags: </b><%= tags.text if tags.text.present? %></p>
      </div>
    <% end %>
    <br>

    <!-- Left side -->

    <nav class="level">
      <div class="level-left">
        <p class="level-item">
          <strong>Actions</strong>
        </p>
      </div>

      <!-- Right side -->

      <div class="level-right">
        <p class="level-item">
          <%= link_to "Edit", edit_article_path(@article) %>
          <br>
          <%= link_to 'Delete', articles_path(@article), method: :delete, data: { confirm: "Are you sure" } %>
          <br>
          <%= link_to 'Home', articles_path %>
          <br>
        </p>
      </div>

    </nav>
  </div>
</section>